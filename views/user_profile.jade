.container 
    include shopnav

.container.mt-5 
    .row.d-flex.justify-content-center 
        .col-md-7
            .card.p-3.py-4 
                .text-center 
                    img(src="/images/userprofile/#{userName}.jpg" width="100" class="rounded-circle")
                .text-center.mt-3 
                    span.bg-secondary.p-1.px-4.rounded.text-white #{role}
                    h4.mt-2.mb-0 #{userName}
                    h5.text-info [Credit : #{credit}]
                    .px-4.mt-1 
                        p.fonts Consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                    ul.social-list 
                        li 
                            i.fa.fa-facebook 
                        li 
                            i.fa.fa-instagram
                        li 
                            i.fa.fa-google
                    
                    .d-flex.justify-content-center
                        .buttons 
                            button.btn.btn-outline-primary.px-4
                                a(href="/api/auth/logout" style="text-decoration: none;") Logout
                        if role == '特 A 級'
                            &nbsp;&nbsp;
                            .buttons 
                                button.btn.btn-outline-primary.px-4
                                    a(href="/admin/ctrl" style="text-decoration: none;") CTRL Panel

